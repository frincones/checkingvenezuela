# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Base URL (Required for production)
NEXT_PUBLIC_BASE_URL=https://your-domain.com

# Stripe Configuration (Optional - payment features disabled if not set)
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Mailjet Configuration (Optional - email features disabled if not set)
MAIL_API_TOKEN=your-mailjet-api-key
MAIL_SECRET_TOKEN=your-mailjet-secret-key

# API Secrets (Required for cron jobs and generation endpoints)
CRON_SECRET=your-cron-secret
API_SECRET_TOKEN=your-api-secret-token

# Revalidation Time (Optional - defaults to 600 seconds)
NEXT_PUBLIC_REVALIDATION_TIME=600
